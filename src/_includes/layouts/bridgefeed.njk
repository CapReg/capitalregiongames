{% extends "layouts/base.njk" %}
 {% set pageHeaderTitle = title %}
 {% set pageHeaderImage = imageURL %}
 {% set pageHeaderSummary = summary %}
{% block content %}
     <article class="w-full prose lg:prose-xl mx-auto pt-10 pb-10">
          {{ content | safe }}
        </article>
         {% for item in collections.bridge %}
        <article class="w-full prose lg:prose-xl mx-auto pt-10 pb-10">
	       <h2 class="w-full">{{ item.data.title }}</h2>
           <span class="text-gray-800 bg-green-50 p-5 font-serif text-base mb-5"> <b>Location: </b>{{ item.data.location }}</span>
            {{ item.templateContent | safe }}
         </article>
        {% endfor %}
{% endblock %}
